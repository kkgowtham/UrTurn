<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestBloodActivity">
<EditText
    android:id="@+id/br_name"
    android:hint="Enter Patient Name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/br_hosptalname"
        android:hint="Enter Blood Bank Name or Hospital Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Enter No of Units"
        android:id="@+id/no_of_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/blood_group_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/br_contact_number"
        android:hint="Enter contact number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/br_timewithin"
        android:hint="Time Within (in hours)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_gravity="center_horizontal"
        android:id="@+id/state_request_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Spinner
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cities_request_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:onClick="requestBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>